<p>If you already own an account, fill this form and you'll become its administrator.</p>

<%= form_for :account, url: reclaim_accounts_path do |f| -%>
  <% if @acount_reclaim_error %>
  <p style="color: red">Invalid account name/password</p>
  <% end %>

  <p>
  <%= f.label :name -%><br/>
  <%= f.text_field :name -%>
  </p>

  <p>
  <%= f.label :password -%><br/>
  <%= f.password_field :password, :value => '', :autocomplete => :off -%>
  </p>

  <%= f.submit 'Reclaim Account' %>
<%- end -%>
